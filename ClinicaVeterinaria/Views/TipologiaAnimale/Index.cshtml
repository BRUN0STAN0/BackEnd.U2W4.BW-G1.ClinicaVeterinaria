@model IEnumerable<ClinicaVeterinaria.Models.TipologiaAnimale>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>LISTA TIPOLOGIA ANIMALI</h2>


    <p>
        @Html.ActionLink("Crea animale", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.ActionLink("Modifica", "Edit", new { id = item.ID_TipologiaAnimale }) |
                    @Html.ActionLink("Dettagli", "Details", new { id = item.ID_TipologiaAnimale }) |
                    @Html.ActionLink("Elimina", "Delete", new { id = item.ID_TipologiaAnimale })
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Visualizza la lista animali", "Index", "Animale")
    </p>
</div>