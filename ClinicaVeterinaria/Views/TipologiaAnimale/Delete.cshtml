@model ClinicaVeterinaria.Models.TipologiaAnimale

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <h2>ELIMINA ANIMALE</h2>

    <h3>Sei sicuro di voler eliminare questo animale?</h3>
    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn w-100 mt-3" style="background-color: cornflowerblue; color: white;" />
                @Html.ActionLink("RItorna alla lista animali", "Index")
            </div>
        }
    </div>
</div>