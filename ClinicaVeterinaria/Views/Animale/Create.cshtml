    let hasMicrochip = false;
    $("#NumeroMicrochip").hide();
    $(".numeroMicrochip").hide();
    $("#Microchip").click(function () {
        if (hasMicrochip) {
            $("#NumeroMicrochip").hide();
            $(".numeroMicrochip").hide();
            hasMicrochip = false;
